---
import '../styles/global.css';
import BaseBody from '@components/BaseBody.astro';
import BaseHead from '@components/BaseHead.astro';

type Props = {
  title?: string;
  description?: string;
  image?: string;
  /** e.g. "noindex, follow" for tag archives */
  robots?: string;
};

const { title, description, image, robots }: Props = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-surface-default wa-cloak" data-color-mode="dark">
  <head>
    <BaseHead title={title} description={description} image={image} robots={robots} />
    <slot name="head" />
  </head>

  <BaseBody>
    <slot />
  </BaseBody>
</html>

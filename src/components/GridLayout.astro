---
import PageTitle from './PageTitle.astro';

type Props = {
  title?: string;
  maxColumns?: number;
};

const { title, maxColumns = 2 } = Astro.props;
---

<div class="flex flex-col gap-8">
  {title && <PageTitle title={title} />}
  <div class={`grid grid-cols-1 md:grid-cols-${maxColumns} gap-10 m-0 p-0`}>
    <slot />
  </div>
</div>

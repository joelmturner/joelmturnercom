---
import { Icon } from 'astro-icon/components';
import type { TechIcon } from '@lib/types';

type Props = {
  icon: TechIcon;
};

const { icon } = Astro.props;
---

{icon === 'typescript' && <Icon name="logos:typescript-icon" title={icon} />}
{icon === 'react' && <Icon name="logos:react" title={icon} />}
{icon === 'next.js' && <Icon name="logos:nextjs-icon" title={icon} />}
{icon === 'panda css' && <Icon name="logos:pandacss-icon" title={icon} />}
{icon === 'chakra ui' && <Icon name="simple-icons:chakraui" title={icon} />}
{icon === 'svelte' && <Icon name="logos:svelte-icon" title={icon} />}
{icon === 'cloudinary' && <Icon name="logos:cloudinary-icon" title={icon} />}

---
import { cn } from '@lib/utils';

const { variant, height = '500px', width = '100%', ...rest } = Astro.props;
const style = variant === 'card' ? '--canvas-padding: 0;' : '';
---

<div
  class={cn('flex flex-col gap-4 mb-4 h-[500px] w-full')}
  style={`height: ${height}; width: ${width};`}
>
  <zine-viewer id={variant} style={style} {...rest}>
    <slot />
  </zine-viewer>
</div>

<script
  is:inline
  type="module"
  src="https://unpkg.com/@joelmturner/zine-viewer-web-component?module"></script>

<style>
  zine-viewer {
    --canvas-bg-color: rgba(81, 77, 86, 0.5);
    /* min-height: 500px; */
  }
  @media (max-width: 768px) {
    zine-viewer {
      /* min-height: 300px; */
    }
  }
</style>

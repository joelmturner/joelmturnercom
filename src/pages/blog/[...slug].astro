---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import BlogPost from '@layouts/BlogPost.astro';

// helper to extract slug from entry id (filename without extension)
function getSlugFromId(id: string): string {
  // id is the filename without extension, e.g., "2025-11-17-zine-viewer-web-component"
  return id;
}

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post, index) => ({
    params: { slug: post.data.slug || getSlugFromId(post.id) },
    props: { post, next: posts[index + 1], prev: posts[index - 1] },
  }));
}
type Props = {
  post: CollectionEntry<'blog'>;
  next: CollectionEntry<'blog'>;
  prev: CollectionEntry<'blog'>;
};

const { post, next, prev } = Astro.props;
const { Content } = await render(post);
const slug = post.data.slug || getSlugFromId(post.id);
---

<BlogPost {...post.data} slug={slug} next={next} prev={prev}>
  <Content />
</BlogPost>

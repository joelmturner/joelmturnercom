{
  "compilerOptions": {
    "target": "esNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "contentlayer/generated": ["./.contentlayer/generated"],
      "~/lib/*": ["./src/lib/*"],
      "@components/*": ["./src/components/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".contentlayer/generated",
    "src/lib/rehype-highlight-code.ts",
    "src/lib/rehype-highlight-line.ts",
    "contentlayer.config.ts",
    "src/lib/rehype-meta-attribute.ts",
    ".next/types/**/*.ts",
    "src",
    "styled-system",
    "next.config.mjs"
  ],
  "exclude": ["node_modules"]
}

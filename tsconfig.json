{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "styled-system/*": ["styled-system/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@lib/*": ["src/lib/*"]
    }
  },
  "include": [
    "src/**/*",
    "styled-system/**/*",
    ".astro/**/*",
    "panda.config.ts"
  ],
  "exclude": ["dist"]
}
